<div>
  <h1 class="title"><%=title%></h1>
  <div>
    <ul class="item-list">
      <% if(typeof pet_list !== 'undefined' ){ for(let pet of pet_list) { %>
      <li>
        <div class="card">
          <figure>
            <img src="../images/blank_image.png" />
          </figure>
          <div class="card-body">
            <h3 class="card-title"><%= pet.name %></h3>
            <div class="card-link">
              <p><a href="/inventory/pet/<%= pet._id %>/update">Update</a></p>
              <p><a href="/inventory/pet/<%= pet._id %>/delete">Delete</a></p>
            </div>
          </div>
        </div>
      </li>
      <% }} else {%>
      <h2>No pets found.</h2>
      <%}%>
    </ul>
  </div>
</div>
